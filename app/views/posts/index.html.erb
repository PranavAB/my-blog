
<h1>Listing posts</h1>

 <%= link_to 'New post, bro', new_post_path %>
  
<table class="table table-striped table-hover">
  
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <% if user_signed_in? %>
    <th></th>
    <th></th>
    <% end %>
    
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= simple_format post.text %></td>
      <td><%= link_to 'Show', post %></td>
      <% if user_signed_in? %>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),
                      method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

