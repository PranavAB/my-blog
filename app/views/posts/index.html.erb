<%= paginate @posts %>  
  
<h1>Listing posts</h1>

  
<table class="table table-striped table-hover">
  
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Owner</th>
    <th></th>

    
  </tr>
 
  <% @posts.each do |post| %>

  
    <tr>
      <td><%= post.title %></td>
      <td><%= simple_format post.text %></td>
      <td><%= simple_format post.user.name %></td>
      <td><%= link_to 'Show', post %>

      <% if can? :update, post %>
         <%= link_to 'Edit', edit_post_path(post) %>
      <% end %>
      
      <% if can? :destroy, post %>
         <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      
    </tr>
  <% end %>
</table>

