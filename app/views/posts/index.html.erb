<%= paginate @posts %>  
  
<font color="white"><h1>Listing posts</h1></font>

  
  
  <% @posts.each do |post| %>
  <div class="jumbotron", style="word-break:break-all">
  
        <h2><%= post.title %></h2>
        <%= simple_format post.text %>
        <p> <%= simple_format post.user.name %></p>
        <div class="btn-group">
        <p><%= link_to 'Show', post, class:"btn btn-default" %>
        <% if can? :update, post %>
           <%= link_to 'Edit', edit_post_path(post) , class:"btn btn-default"%>
        <% end %>
      
        <% if can? :destroy, post %>
           <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default" %>
        <% end %>
        </p>
        </div>
        
        </div>
  <% end %>
  
